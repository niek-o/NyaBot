{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": false,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": false,
    "types": [
      "@infinite-fansub/logger/globals"
    ]
  },
  "typedocOptions": {
    "entryPoints": [
      "src/nya.ts",
      "src/utils/*.ts",
      "src/utils/types/*.ts",
      "src/utils/asciifier/asciifier.ts"
    ],
    "out": "docs",
    "excludeExternals": true,
    "hideGenerator": true,
    "plugin": [
      "typedoc-plugin-missing-exports",
      "typedoc-theme-hierarchy"
    ],
    "theme": "hierarchy",
    "sort": "static-first",
    "githubPages": true
  }
}
